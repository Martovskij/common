                               Opacity="0"
                               RadiusX="2"
                               RadiusY="2" />
                    <Rectangle x:Name="FocusVisualElement"
                               Margin="1"
                               IsHitTestVisible="false"
                               Opacity="0"
                               RadiusX="2"
                               RadiusY="2"
